package practice_june;

public class FirstNNaturalNum {
	int SumNaturalNum(int n)
	{
		int sum = 0;
		
		for(int i=1; i<=n; i++)
		{
			sum = sum + i;
		}
		return sum;
	}
	

}

package practice_june;

import java.util.Scanner;

public class SumNNaturalNumApp {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		System.out.println("Enter the value of n to find 1st n natural numbers");
		int n = scan.nextInt();
		FirstNNaturalNum z = new FirstNNaturalNum();
		int sum = z.SumNaturalNum(n);
		System.out.println("Sum of 1st n Natural Numbers is "+sum);
		

	}

}

Output:
Enter the value of n to find 1st n natural numbers
10
Sum of 1st n Natural Numbers is 55
