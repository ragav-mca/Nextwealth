package sayur_practice;

import java.util.Scanner;

public class Age {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		System.out.println("Enter the name");
		String user_name = scan.next();
		System.out.println("Hello "+user_name);
		System.out.println("Enter the year you born");
		int birth_year = scan.nextInt();
		System.out.println("Enter the current year");
		int current_year = scan.nextInt();
		int present_age = current_year - birth_year;
		System.out.println("You are "+present_age+" years old");

	}

}

Output:
Enter the name
Ragav
Hello Ragav
Enter the year you born
2000
Enter the current year
2023
You are 23 years old
